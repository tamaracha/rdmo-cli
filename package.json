{
  "name": "rdmo-cli",
  "version": "0.0.1",
  "description": "Validate and export RDMO catalogs authored in JSON",
  "main": "bin/index.js",
  "scripts": {
    "lint": "standard --fix -- | snazzy",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "mate -w CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "bin": {
    "rdmo": "bin/index.js"
  },
  "keywords": [
    "RDMO",
    "cli"
  ],
  "author": "Tamara Cook <tamara.cook@uni-marburg.de>",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.6",
    "ajv": "^7.0.2",
    "ajv-formats": "^1.5.1",
    "rdmo-json2xml": "https://github.com/tamaracha/rdmo-json2xml/releases/download/v0.1.0/rdmo-json2xml-0.1.0.tgz",
    "shelljs": "^0.8.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "markdownlint": "^0.22.0",
    "markdownlint-cli2": "^0.0.13",
    "prettier": "^2.2.1",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint --",
    "*.md": "markdownlint-cli2",
    "*.{yml,yaml,json}": "prettier --write"
  }
}
