{
  "name": "rdmo-cli",
  "version": "0.0.1",
  "description": "Validate and export RDMO catalogs authored in JSON",
  "main": "bin/index.js",
  "scripts": {
    "lint": "standard --fix -- | snazzy",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "rdmo": "./bin/index.js"
  },
  "keywords": [
    "RDMO",
    "cli"
  ],
  "author": "Tamara Cook <tamara.cook@uni-marburg.de>",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rdmo-json-schema": "github:tamaracha/rdmo-json-schema",
    "rdmo-json2xml": "github:tamaracha/rdmo-json2xml",
    "shelljs": "^0.8.4",
    "snazzy": "^9.0.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "standard": "^16.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": "npm run lint --",
    "*.{yml,yaml,json}": "prettier --write"
  }
}
